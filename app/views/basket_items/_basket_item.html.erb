
<div class="columns single_item">
    <div class="column is-5">
        <article class="media">
            <figure class="media-left">
                <p class="image is-64x64">
                    <%= image_tag url_for(basket_item.gig.photos.first)%>
                </p>
            </figure>
            <div class="media-content">
                <div class="content">
                    <p>
                        <strong><%= basket_item.gig.title%></strong>
                    </p>
                </div>
            </div>
        </article>        
    </div>
    <div class="column is-3">
        <div class="select is-rounded">
            <select data-reflex="change->BasketItemReflex#incrementQuantity" data-id="<%= basket_item.id %>">
                <% for i in 1..basket_item.gig.stock do %>
                    <% if i == basket_item.quantity %>
                        <option value="<%= i %>" selected><%= i %></option>
                    <% else %>
                        <option value="<%= i %>"><%= i %></option>
                    <% end %>
                <% end %>
            </select>
        </div>
    </div>
    <div class="column is-2">
        x<%= basket_item.quantity %> <span class="tag is-rounded is-primary"> <%= basket_item.price%></span>
    </div> 
    <div class="column is-2">
        <span class="tag is-rounded is-danger"><%= link_to "Retirer du pagnÃ©", basket_item, method: :delete, data: { confirm: "Etes vous sur? " }, class:"has-text-white" %></span> 
    </div>    
</div>
