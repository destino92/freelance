<section class="section">
<div class="container">
<div class="keep-shopping pv1 mt4 has-text-right">
  <%= link_to 'Retourner au tableau de bord', dashboard_path, class: 'button is-warning' %>
</div>
<hr />
<section class="section card-template">
    <div class="basket_item_title">
        <div class="columns">
            <div class="column is-5">
                <h4>Details annonce</h4>
            </div>
            <div class="column is-3">
                 <h4 class="add_info">Quantite</h4>
            </div>
            <div class="column is-2">
                <h4>Prix</h4>
            </div>
            <div class="column is-2">
                <h4>Action</h4>
            </div>
        </div>
    </div>
    
    <%= render(@basket.basket_items) %>

<% if @basket.basket_items.count > 0 %>
  <div class="columns">
    <div class="column">
      <%= button_to 'vider le pagne', @basket, method: :delete, data: { confirm: "Etes vous sur? " }, class: "button is-danger" %>
    </div>
    <div class="column total has-text-right">
      <h4 class="title is-4">
        <span class="f5 has-text-grey">Total: </span> <%= @basket.total_price %> Fcfa
      </h4>
    </div>
  </div>
  
    <div class="columns">
        <div class="column is-2 is-offset-10">
        <%= link_to 'Commander', order_path, class: 'button is-warning' %>
        </div>
    </div>
  <% end %>
</section>
</div>
</section>