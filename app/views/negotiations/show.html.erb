<section class="section">
    <div class="container">
        <div class="columns">
            <!-- LEFT SIDE -->
            <div class="column is-half">
                <p class="menu-label">
                    Offres
                </p>
                <hr>
                <div>
                    <% @negotiation_offers.each do |offer| %>
                        <div class="column is-half">
                            <div class="card-template" data-controller="menu icon">
                                <h1 class="title has-text-centered"><%= offer.price %></h1>
                                <div class="buttons" >
                                    <form>
                                        <div class="field has-addons">
                                            <div class="control">
                                                <input class="input input-grey" type="number" placeholder="Offre">
                                            </div>
                                            <div class="control">
                                                <a class="button is-info">
                                                    Répondre
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                    <button class="button is-success is-fullwidth">Accepter</button>
                                    <button class="button is-danger is-fullwidth">Refuser</button>
                                </div>
                                <div class="has-text-centered" data-icon-target="success" type="text">
                                    <span class="icon title has-text-success">
                                        <i class="fas fa-check-circle"></i>
                                    </span>
                                </div>
                                <div class="has-text-centered" data-icon-target="danger" type="text">
                                    <span class="icon title has-text-danger">
                                        <i class="fas fa-ban"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
                <% if @negotiation.gig.reviews.exists? %>
                    <h4>
                        Revue du produit
                    </h4>
                    <% @negotiation.gig.reviews.each do |review| %>
                        <div class="column is-half">
                            <div class="card-template review-container">
                                <div class="card-content">
                                    <article class="media">
                                        <div class="media-content">
                                            <%= review.review %>
                                        </div>
                                        <div class="media-right review-stat has-text-link">
                                            <span class="is-8"><%= review.stars %></span> / 5
                                        </div>
                                    </article>
                                </div>
                            </div>                        
                        </div>
                    <% end %>
                <% end %>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column is-half">
                <div class="card">
                    <div class="card-image">                        
                        <figure class="image">
                            <%= cl_image_tag(@negotiation.gig.photos.first.key, :transformation => 
    { :dpr => "auto", :responsive => true, :width => "auto", :crop => "scale"}) %>
                            <%= image_tag 'icon_default_image.png' if @request %>
                        </figure>
                    </div>
                    <div class="card-content">
                        <p>
                            <strong><%= @negotiation.gig.title %></strong>
                            <strong class="title is-4 is-pulled-right has-text-success">Fcfa <%= @negotiation.gig.price.to_i %></strong>
                        </p>
                        <br>
                        <small>
                            <p><strong>Ajouté le: </strong><%= @negotiation.gig.created_at.strftime('%d, %b %Y')%></p> 
                        </small>                    
                    </div>                   
                </div>
            </div>
        </div>
    </div>
</section>