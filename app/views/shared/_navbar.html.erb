<script>
$(document).ready(function() {

  // Check for click events on the navbar burger icon
    $(".navbar-burger").click(function() {
        // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
        $(".navbar-burger").toggleClass("is-active");
        $(".navbar-menu").toggleClass("is-active");
    });

    // Accordeon pour les sous categories
    var allCategories = $('.sub-category').hide();
    var titles = $('.accordion .title');
    $(titles).click(function() {
        console.log("salut");
        $this = $(this);
        $target =  $this.parent().find('div.sub-category');
        if(!$target.hasClass('active')){
            titles.removeClass('selected');
            $this.addClass('selected');
            allCategories.removeClass('active').slideUp();
            $target.addClass('active').slideDown();
        }else{
			$this.removeClass('selected');
			allCategories.removeClass('active').slideUp();
		}
    });
});


</script>

